application: @APP_NAME@
version: 1
runtime: python
api_version: 1

handlers:
- url: /
  static_dir: static/pages/index.html
  login: admin
  secure: always

- url: /js
  static_dir: static/js
  login: admin
  secure: always

- url: /css
  static_dir: static/css
  login: admin
  secure: always

- url: /images
  static_dir: static/images
  login: admin
  secure: always

- url: /tasks/.*
  script: msdos/drivers/urls.py
  login: admin

- url: .*
  script: msdos/urls.py
  secure: always
  login: admin
